<div class="container">
  <h1 class="mx-2 my-4">Updating Task - <%= @task.title  %></h1>
  <%= form_for(@task) do |t| %>
    <div class="m-2">
      <%= t.label :title %>
      <%= t.text_field :title %>
    </div>
    <div class="m-2">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>
    <div class="m-2">
      <%= label_tag(:completed, "Completed") %>
      <%= t.check_box(:completed) %>
    </div>
    <div class="m-2">
      <%= t.submit %>
    </div>
  <% end %>
  <div class="m-2">
    <%= link_to "Back To List",  tasks_path, :class => 'btn btn-secondary'%>
  </div>
</div>
