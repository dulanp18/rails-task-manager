
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><input type="checkbox" name="<%= @task.id %>" value="true"><%= @task.completed %></p>


<%= link_to "Edit Task",  edit_task_path(@task) %>
<%= link_to "Delete Task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Back To List",  tasks_path %>
